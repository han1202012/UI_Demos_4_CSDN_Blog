<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hanshuliang.shader.MainActivity">

    <Button
        android:id="@+id/paint_shader_bitmap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="位图渲染"
        app:layout_constraintBottom_toTopOf="@+id/paint_shader_lineargradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/paint_shader_lineargradient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="线性渲染"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paint_shader_bitmap" />

</android.support.constraint.ConstraintLayout>