<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shader.TileMode.CLAMP 拉伸方式 : "/>
            <hanshuliang.com.ui_demos_4_csdn_blog.B_2_Paint_BitmapShader_View_Clamp
                android:layout_width="200dip"
                android:layout_height="200dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shader.TileMode.REPEAT 拉伸方式 : "/>
            <hanshuliang.com.ui_demos_4_csdn_blog.B_2_Paint_BitmapShader_View_Repeat
                android:layout_width="200dip"
                android:layout_height="200dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shader.TileMode.MIRROR 拉伸方式 : "/>
            <hanshuliang.com.ui_demos_4_csdn_blog.B_2_Paint_BitmapShader_View_Mirror
                android:layout_width="200dip"
                android:layout_height="200dip" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>